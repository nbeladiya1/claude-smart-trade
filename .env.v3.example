# ============================================
# Claude Smart Trade Bot v3.0 Configuration
# ============================================

# ===========================================
# Operation Mode
# ===========================================
SIMULATION_MODE=true
TRADING_MODE=demo

# ===========================================
# Binance API Configuration
# ===========================================
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=false
BINANCE_US=true

# Crypto Symbols to Trade (comma-separated)
CRYPTO_SYMBOLS=BTCUSD,ETHUSD,SOLUSD

# ===========================================
# OpenAI API Configuration
# ===========================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# AI Consensus Settings
AI_CONSENSUS_ROUNDS=3
AI_CONSENSUS_REQUIRED_AGREEMENT=0.7
AI_TEMPERATURE=0.3

# ===========================================
# Bot Settings
# ===========================================
CHECK_INTERVAL=60
LOG_LEVEL=INFO
LOG_DIR=/var/log/smart-trade
INITIAL_BALANCE=10000

# ===========================================
# Risk Management
# ===========================================
MAX_DRAWDOWN=0.15
MAX_DAILY_LOSS=0.05
MAX_POSITIONS=3
MAX_EXPOSURE=0.30
RISK_PER_TRADE=0.02
MIN_RR_RATIO=1.5
MAX_LEVERAGE=10

# ===========================================
# Telegram Notifications (Optional)
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=false

# ===========================================
# Discord Alerts (Optional)
# ===========================================
DISCORD_WEBHOOK_URL=
