# ============================================
# Claude Smart Trade Bot v2.0 Configuration
# ============================================

# MetaTrader 5 Configuration
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_broker_server

# Trading Configuration
SYMBOL=EURUSD
TIMEFRAME=H1
LOT_SIZE=0.01
STOP_LOSS=50
TAKE_PROFIT=100

# Bot Settings
CHECK_INTERVAL=60
LOG_LEVEL=INFO

# ============================================
# LLM Configuration (Dual-Agent System)
# ============================================

# OpenAI API (for FinGPT-style sentiment analysis)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic API (for technical analysis agent)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# HuggingFace (for FinGPT/FinLLaMA models - optional)
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key
FINGPT_MODEL=FinGPT/fingpt-forecaster_sz50_llama2-7b_lora
FINLLAMA_MODEL=TheFinAI/FinLLaMA

# LLM Agent Settings
LLM_PROVIDER=openai
USE_DUAL_LLM=true
LLM_CONSENSUS_REQUIRED=true
LLM_TEMPERATURE=0.3

# ============================================
# Telegram Bot Configuration
# ============================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Get your chat ID from @userinfobot or @getidsbot
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ENABLED=true

# Notification Settings
NOTIFY_ON_SIGNAL=true
NOTIFY_ON_TRADE=true
NOTIFY_ON_ERROR=true
NOTIFY_DAILY_SUMMARY=true

# ============================================
# Money Management Configuration
# ============================================
RISK_PER_TRADE=2.0
MAX_DAILY_LOSS=5.0
MAX_OPEN_TRADES=3
MAX_DRAWDOWN=10.0
USE_TRAILING_STOP=true
TRAILING_STOP_PIPS=30

# Position Sizing Method: fixed, percent_risk, kelly
POSITION_SIZING_METHOD=percent_risk

# ============================================
# News & Sentiment Sources (Optional)
# ============================================
NEWS_API_KEY=your_newsapi_key
ALPHA_VANTAGE_API_KEY=your_alphavantage_key
FINNHUB_API_KEY=your_finnhub_key
